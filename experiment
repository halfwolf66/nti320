--image-family centos-7 \
--image-project centos-cloud \
--zone us-central1-a \
--tags "http-server","https-server" \
--machine-type f1-micro \
--scopes cloud-platform \
--metadata-from-file startup-script=/home/irishman253/NIT-310/nfsserver \
--private-network-ip=10.128.0.8

sleep 30

gcloud compute instances create client-1 \
--image-family ubuntu-1804-lts \
--image-project ubuntu-os-cloud \
--zone us-central1-a \
--machine-type f1-micro \
--scopes cloud-platform \
--metadata-from-file startup-script=/home/irishman253/NIT-310/ldapclient.sh \
--private-network-ip=10.128.0.9

sleep 30

gcloud compute instances create client-2 \
--image-family ubuntu-1804-lts \
--image-project ubuntu-os-cloud \
--zone us-central1-a \
--machine-type f1-micro \
--scopes cloud-platform \
--metadata-from-file startup-script=/home/irishman253/NIT-310/ldapclient.sh \
