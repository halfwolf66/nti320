sleep 30

gcloud compute instances create nagios-srv \
--image-family centos-7 \
--image-project centos-cloud \
--zone us-central1-a \
--tags "http-server","https-server" \
--machine-type f1-micro \
--scopes cloud-platform \
--metadata-from-file startup-script=/home/irishman253/nti320/nagios.sh \
